<section class='fields'>
  <div class='carnet-field'>
    Carnet: <%= f.text_field(:carnet, required: true) %>
  </div>
  <div class='name-field'>
    Nombre: <%= f.text_field(:name, required: true) %>
  </div>
  <div class='career-field'>
    <% career_array = Career.all.map { |career| [career.name, career.id] } %>
    Carrera: <%= f.select(:career_id, options_for_select(career_array)) %>
  </div>
  <div class='email-field'>
    Email: <%= f.email_field(:email, required: true) %>
  </div>
  <div class='phone-field'>
    Telefono: <%= f.text_field(:phone) %>
  </div>
  <div class='remove-field'>
    <%= f.hidden_field(:_destroy) %>
    <%= link_to_function "Remover", "remove_fields(this)" %>
  </div>
</section>

